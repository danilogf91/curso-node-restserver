extends base

block content
        head
          title= title
          //-link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous")
        body.bg-light
            div.container
              div.row
                each item in items
                  div.col-sm-3.mb-2.mt-2
                      div.card
                          img(src=`/img/logoFerreteria.jpg`, alt=`The Park Camper Tour `)
                          div.card-body
                            h3.card-title= item.razonSocial
                            p.card-text= item.descripcion
                            a(href="#", class="btn btn-primary")=`Ir a ${item.razonSocial.toLowerCase()}`
                        
              - let n = 1;
              div.row.align-items-center.mt-2
                  div.col-sm-4
                  div.col-sm-4
                    nav
                      ul.pagination
                        li.page-item
                            if currentPage != 1  
                              a.page-link(href=`?limite=${numberPerPage}&desde=${antPage}`) Anterior

                            while n <= numPages
                              if n == currentPage
                                li.page-item.active
                                  a.page-link(href=`?limite=${numberPerPage}&desde=${n}`)= n++
                              else 
                                li.page-item
                                  a.page-link(href=`?limite=${numberPerPage}&desde=${n}`)= n++

                        li.page-item
                        if numPages != currentPage
                          a.page-link(href=`?limite=${numberPerPage}&desde=${sigPage}`) Siguiente
                  div.col-sm-4
